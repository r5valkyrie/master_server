# MySQL Database
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASS=password
MYSQL_DB=r5

# Redis (Optional - the app will run without it)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# Server Time-To-Live in Redis (in seconds)
SERVER_TTL=35

# API Key for Client/Programmatic Access (Required)
# Used by game clients and external tools to authenticate API requests
# This is NOT for the admin web panel - that uses user accounts
API_KEY=your_secure_api_key_here

# Admin Session Secret (Required)
# Used for admin web panel JWT session tokens
ADMIN_SESSION_SECRET=your_secure_session_secret_here

# Private Key Passphrase (if auth.key is passphrase-protected)
AUTH_KEY_PASSPHRASE=

# Steam API Configuration
STEAM_WEB_API_KEY=your_steam_api_key_here
STEAM_APP_ID=480

# Discord Bot Token (for bot features like channel management)
DISCORD_BOT_TOKEN=

# Discord Webhook URLs (optional - for logging/notifications)
DISCORD_WEBHOOK_ADMIN=
DISCORD_WEBHOOK_GENERAL=
DISCORD_WEBHOOK_SERVERS=

# Discord Channel IDs (optional - for bot features)
DISCORD_SERVERS_CHANNEL_ID=
DISCORD_SERVERS_LOG_CHANNEL_ID=
DISCORD_PLAYERS_CHANNEL_ID=

# Discord Command Authorization (comma-separated user IDs allowed to run bot commands)
DISCORD_COMMAND_ALLOW_IDS=

# Thunderstore Watcher Configuration (optional)
# Community key on Thunderstore (default: r5valkyrie)
THUNDERSTORE_COMMUNITY=r5valkyrie
# Discord webhook to post mod updates
THUNDERSTORE_DISCORD_WEBHOOK=
# Poll interval in milliseconds (default 300000 = 5 minutes)
THUNDERSTORE_CHECK_INTERVAL_MS=300000

# Application Environment
NODE_ENV=development

# Allowed Hosts (optional - comma-separated list for Vite server)
ALLOWED_HOSTS=
