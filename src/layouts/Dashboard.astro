import { getSessionCookieName, verifyAdminSessionToken } from '../lib/session';

const { pathname } = Astro.url;
const pageMap: Record<string, string> = {
  '/admin/dashboard': 'Dashboard',
  '/admin/banlist': 'Banlist',
  '/admin/checksums': 'Checksums',
  '/admin/versions': 'Versions',
  '/admin/verifiedMods': 'Verified Mods',
  '/admin/content': 'Content',
  '/admin/users': 'Users',
  '/admin/userQuery': 'User Query',
  '/admin/servers': 'Servers',
  '/admin/userManagement': 'User Management',
  '/admin/discordConfig': 'Discord Config',
  '/admin/apiKeys': 'API Keys',
  '/admin/systemSettings': 'System Settings',
};

const currentPage = pageMap[pathname] || 'Dashboard';
let loggedInUser = '';
let role: 'master' | 'admin' | 'moderator' | '' = '';

try {
  const cookieHeader = Astro.request.headers.get('cookie') || '';
  const cookieName = getSessionCookieName();
  const cookieValue = cookieHeader.split(';').map(s => s.trim()).find(s => s.startsWith(cookieName + '='))?.split('=')[1];
  if (cookieValue) {
    const session = verifyAdminSessionToken(cookieValue);
    if (session) {
      loggedInUser = session.username;
      role = session.role;
    }
  }
} catch {}
