  <!-- Notification Container -->
  <div id="notificationContainer"></div>

  <script>
    // Sidebar toggle functionality
    const adminLayout = document.getElementById('adminLayout');
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.querySelector('.admin-sidebar');
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');

    // Toggle sidebar collapse on desktop
    sidebarToggle?.addEventListener('click', () => {
      adminLayout?.classList.toggle('sidebar-collapsed');
      localStorage.setItem('sidebarCollapsed', adminLayout?.classList.contains('sidebar-collapsed') ? 'true' : 'false');
    });

    // Mobile menu toggle
    mobileMenuToggle?.addEventListener('click', () => {
      sidebar?.classList.toggle('mobile-open');
    });

    // Restore sidebar state
    if (localStorage.getItem('sidebarCollapsed') === 'true') {
      adminLayout?.classList.add('sidebar-collapsed');
    }

    // Navigation section toggles
    document.querySelectorAll('.nav-section-toggle').forEach(toggle => {
      const sectionId = toggle.getAttribute('data-section');
      const section = document.getElementById(`${sectionId}-section`);
      const isCollapsed = localStorage.getItem(`nav-section-${sectionId}`) === 'collapsed';
      
      // Set initial state
      if (isCollapsed && section) {
        section.classList.add('collapsed');
        toggle.classList.add('collapsed');
      }
      
      // Toggle on click
      toggle.addEventListener('click', () => {
        section?.classList.toggle('collapsed');
        toggle.classList.toggle('collapsed');
        
        const newState = toggle.classList.contains('collapsed') ? 'collapsed' : 'expanded';
        localStorage.setItem(`nav-section-${sectionId}`, newState);
      });
    });

    // Keep active nav items visible
    document.querySelectorAll('.nav-item.active').forEach(activeItem => {
      // Find parent section and expand it
      const section = activeItem.closest('.nav-section');
      if (section) {
        const toggle = section.querySelector('.nav-section-toggle');
        const items = section.querySelector('.nav-section-items');
        if (toggle && items) {
          items.classList.remove('collapsed');
          toggle.classList.remove('collapsed');
          localStorage.setItem(`nav-section-${toggle.getAttribute('data-section')}`, 'expanded');
        }
      }
    });

    // User menu logout
    document.getElementById('userMenu')?.addEventListener('click', async () => {
      if (confirm('Are you sure you want to logout?')) {
        await fetch('/api/admin/auth/logout', { method: 'POST' });
        window.location.href = '/admin/login';
      }
    });

    // Mobile responsiveness
    function handleResize() {
      const isMobile = window.innerWidth < 768;
      if (mobileMenuToggle) {
        mobileMenuToggle.style.display = isMobile ? 'flex' : 'none';
      }
      
      // Close mobile sidebar when resizing to desktop
      if (!isMobile) {
        sidebar?.classList.remove('mobile-open');
      }
    }

    window.addEventListener('resize', handleResize);
    handleResize(); // Initial call

    // Notification system
    (window as any).showNotification = function(type: string, title: string, message: string) {
      const container = document.getElementById('notificationContainer');
      if (!container) return;

      const notification = document.createElement('div');
      notification.className = `notification notification-${type}`;
      
      // Better icons for each notification type
      const getIconSvg = (notificationType: string) => {
        switch (notificationType) {
          case 'success':
            return '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
          case 'error':
            return '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
          case 'warning':
            return '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.664-.833-2.464 0L5.36 16.5c-.77.833.192 2.5 1.732 2.5z"></path>';
          case 'info':
            return '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
          default:
            return '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
        }
      };

      notification.innerHTML = `
        <svg class="notification-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          ${getIconSvg(type)}
        </svg>
        <div class="notification-content">
          <div class="notification-title">${title}</div>
          <div class="notification-message">${message}</div>
        </div>
        <button class="notification-close">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      `;

      container.appendChild(notification);

      // Show notification
      setTimeout(() => notification.classList.add('show'), 100);

      // Auto remove after 5 seconds
      const autoRemove = setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => notification.remove(), 300);
      }, 5000);

      // Manual close
      notification.querySelector('.notification-close')?.addEventListener('click', () => {
        clearTimeout(autoRemove);
        notification.classList.remove('show');
        setTimeout(() => notification.remove(), 300);
      });
    };

    // Close mobile sidebar when clicking outside
    document.addEventListener('click', (e) => {
      const isMobile = window.innerWidth < 768;
      if (isMobile && sidebar?.classList.contains('mobile-open')) {
        const target = e.target as Node;
        if (!sidebar.contains(target) && !mobileMenuToggle?.contains(target)) {
          sidebar.classList.remove('mobile-open');
        }
      }
    });
  </script>
</body>
