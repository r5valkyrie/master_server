<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In â€” R5Valk Admin</title>
  <link rel="stylesheet" type="text/css" href="/admin/css/modern-admin.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <div class="auth-layout">
    <!-- Animated orbs -->
    <div class="auth-orb auth-orb-1"></div>
    <div class="auth-orb auth-orb-2"></div>
    <div class="auth-orb auth-orb-3"></div>

    <div class="auth-container">
      <div class="auth-card">
        <div class="auth-header">
          <div class="auth-logo">
            <div class="auth-logo-glow">
              <svg class="auth-logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
              </svg>
            </div>
            <h1 class="auth-title">R5Valk</h1>
          </div>
          <p class="auth-subtitle">Admin Panel</p>
        </div>

        <div class="auth-body">
          <slot />
        </div>

        <div class="auth-footer">
          <p>&copy; 2025 R5Valk</p>
        </div>
      </div>
    </div>
  </div>

  <style>
    .auth-layout {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      background: #06060e;
    }

    .auth-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.4;
      pointer-events: none;
    }
    .auth-orb-1 {
      width: 400px; height: 400px;
      background: rgba(139, 92, 246, 0.25);
      top: -10%; left: -5%;
      animation: orbFloat1 18s ease-in-out infinite;
    }
    .auth-orb-2 {
      width: 300px; height: 300px;
      background: rgba(168, 85, 247, 0.2);
      bottom: -5%; right: -5%;
      animation: orbFloat2 22s ease-in-out infinite;
    }
    .auth-orb-3 {
      width: 200px; height: 200px;
      background: rgba(192, 132, 252, 0.15);
      top: 50%; left: 60%;
      animation: orbFloat3 15s ease-in-out infinite;
    }

    @keyframes orbFloat1 {
      0%, 100% { transform: translate(0, 0); }
      33% { transform: translate(60px, 40px); }
      66% { transform: translate(-30px, 60px); }
    }
    @keyframes orbFloat2 {
      0%, 100% { transform: translate(0, 0); }
      33% { transform: translate(-40px, -30px); }
      66% { transform: translate(30px, -50px); }
    }
    @keyframes orbFloat3 {
      0%, 100% { transform: translate(0, 0); }
      50% { transform: translate(-50px, 30px); }
    }

    .auth-container {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: 420px;
      padding: 1.5rem;
    }

    .auth-card {
      background: rgba(15, 15, 30, 0.6);
      border: 1px solid rgba(139, 92, 246, 0.15);
      border-radius: 1.25rem;
      backdrop-filter: blur(24px);
      -webkit-backdrop-filter: blur(24px);
      box-shadow:
        0 0 0 1px rgba(255, 255, 255, 0.03),
        0 24px 48px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.04);
      overflow: hidden;
      animation: cardIn 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .auth-header {
      text-align: center;
      padding: 2.5rem 2rem 1.5rem;
      border-bottom: 1px solid rgba(139, 92, 246, 0.08);
    }

    .auth-logo {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }

    .auth-logo-glow {
      width: 4rem;
      height: 4rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(139, 92, 246, 0.12);
      border: 1px solid rgba(139, 92, 246, 0.25);
      border-radius: 1rem;
      box-shadow: 0 0 30px rgba(139, 92, 246, 0.2);
    }

    .auth-logo-icon {
      width: 2rem;
      height: 2rem;
      color: #a78bfa;
    }

    .auth-title {
      font-size: 1.5rem;
      font-weight: 800;
      color: #f0f0f8;
      letter-spacing: -0.02em;
    }

    .auth-subtitle {
      color: #7a7a90;
      font-size: 0.85rem;
      margin-top: 0.25rem;
    }

    .auth-body {
      padding: 2rem;
    }

    .auth-footer {
      text-align: center;
      padding: 1.25rem 2rem;
      border-top: 1px solid rgba(139, 92, 246, 0.06);
    }
    .auth-footer p {
      color: #4a4a5c;
      font-size: 0.75rem;
      margin: 0;
    }

    @keyframes cardIn {
      from { opacity: 0; transform: translateY(16px) scale(0.98); }
      to { opacity: 1; transform: translateY(0) scale(1); }
    }
  </style>
</body>
</html>
