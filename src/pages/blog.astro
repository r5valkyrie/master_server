import Main from "../layouts/Main.astro";

const GHOST_API_URL = "https://blog.playvalkyrie.org/ghost/api/content/posts/";
const GHOST_API_KEY = "4d046cff94d3fdfeaab2bf9ccf";

interface Post {
	id: string;
	slug: string;
	title: string;
	excerpt: string;
	html: string;
	published_at: string;
	url: string;
	feature_image: string | null;
	reading_time: number;
	tags: { name: string; slug: string }[];
	authors: { name: string; slug: string; profile_image: string | null }[];
}

interface Category {
	name: string;
	slug: string;
	icon: string;
	description: string;
}

const categories: Category[] = [
	{ name: "All Posts", slug: "all", icon: "grid", description: "Everything from the blog" },
	{ name: "Community", slug: "community", icon: "users", description: "Community updates and highlights" },
	{ name: "Live Patch Notes", slug: "live-patch-notes", icon: "rocket", description: "Live server patch notes" },
	{ name: "PTU Patch Notes", slug: "ptu-patch-notes", icon: "flask", description: "Public test patch notes" },
	{ name: "Dev Blog", slug: "dev-blog", icon: "terminal", description: "Behind the scenes development" },
];

async function fetchPosts(tag: string): Promise<Post[]> {
	const url = `${GHOST_API_URL}?key=${GHOST_API_KEY}&include=tags,authors&filter=tag:${tag}&limit=10`;
	try {
		const response = await fetch(url);
		if (!response.ok) {
			console.error(`Failed to fetch ${tag} posts. Status: ${response.status}`);
			return [];
		}
		const data = await response.json();
		return data.posts || [];
	} catch (error) {
		console.error(`Error fetching ${tag} posts:`, error);
		return [];
	}
}

const [communityPosts, livePatchNotesPosts, ptuPatchNotesPosts, devBlogPosts] = await Promise.all([
	fetchPosts("community"),
	fetchPosts("live-patch-notes"),
	fetchPosts("ptu-patch-notes"),
	fetchPosts("dev-blog"),
]);

// Combine and dedupe all posts for the "All" view
const allPostsMap = new Map<string, Post>();
[...communityPosts, ...livePatchNotesPosts, ...ptuPatchNotesPosts, ...devBlogPosts].forEach(post => {
	allPostsMap.set(post.id, post);
});
const allPosts = Array.from(allPostsMap.values()).sort(
	(a, b) => new Date(b.published_at).getTime() - new Date(a.published_at).getTime()
);

// Create a JSON-safe posts map for the client
const postsDataMap: Record<string, Post> = {};
allPosts.forEach(post => {
	postsDataMap[post.id] = post;
});

function formatDate(dateString: string): string {
	const date = new Date(dateString);
	return date.toLocaleDateString('en-US', { 
		year: 'numeric', 
		month: 'short', 
		day: 'numeric' 
	});
}

function getRelativeTime(dateString: string): string {
	const date = new Date(dateString);
	const now = new Date();
	const diffMs = now.getTime() - date.getTime();
	const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
	
	if (diffDays === 0) return 'Today';
	if (diffDays === 1) return 'Yesterday';
	if (diffDays < 7) return `${diffDays} days ago`;
	if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
	if (diffDays < 365) return `${Math.floor(diffDays / 30)} months ago`;
	return `${Math.floor(diffDays / 365)} years ago`;
}
