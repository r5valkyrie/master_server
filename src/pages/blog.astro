<script>
	function formatDate(dateString: string): string {
		const date = new Date(dateString);
		return date.toLocaleDateString('en-US', { 
			year: 'numeric', 
			month: 'long', 
			day: 'numeric' 
		});
	}

	function getPostsData(): Record<string, any> {
		const dataElement = document.getElementById('posts-data');
		if (dataElement && dataElement.textContent) {
			try {
				return JSON.parse(dataElement.textContent);
			} catch (e) {
				console.error('Failed to parse posts data:', e);
				return {};
			}
		}
		return {};
	}

	function setupBlog() {
		const navItems = document.querySelectorAll('.sidebar-nav .nav-item');
		const sections = document.querySelectorAll('.posts-section');
		const postCards = document.querySelectorAll('.post-card');
		const modal = document.getElementById('post-modal');
		const modalClose = modal?.querySelector('.modal-close');
		const modalBackdrop = modal?.querySelector('.modal-backdrop');
		const postsData = getPostsData();

		// Category navigation
		navItems.forEach(item => {
			item.addEventListener('click', () => {
				const category = item.getAttribute('data-category');
				
				navItems.forEach(nav => nav.classList.remove('active'));
				item.classList.add('active');
				
				sections.forEach(section => {
					if (section.getAttribute('data-category') === category) {
						section.classList.add('active');
					} else {
						section.classList.remove('active');
					}
				});
			});
		});

		// Post card click handlers
		postCards.forEach(card => {
			card.addEventListener('click', () => {
				const postId = card.getAttribute('data-post-id');
				if (postId && postsData[postId]) {
					openModal(postsData[postId]);
				}
			});
		});

		// Close modal handlers
		modalClose?.addEventListener('click', closeModal);
		modalBackdrop?.addEventListener('click', closeModal);
		
		// Close on escape key
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && modal?.classList.contains('open')) {
				closeModal();
			}
		});
	}

	function openModal(post: any) {
		const modal = document.getElementById('post-modal');
		const featureImage = document.getElementById('modal-feature-image') as HTMLImageElement;
		const title = document.getElementById('modal-title');
		const date = document.getElementById('modal-date');
		const readingTime = document.getElementById('modal-reading-time');
		const author = document.getElementById('modal-author');
		const body = document.getElementById('modal-body');

		if (!modal || !title || !body) return;

		// Set content
		if (featureImage) {
			featureImage.src = post.feature_image || '';
			featureImage.alt = post.title;
		}
		title.textContent = post.title;
		if (date) date.textContent = formatDate(post.published_at);
		if (readingTime) readingTime.textContent = `${post.reading_time || 1} min read`;
		
		if (author && post.authors && post.authors[0]) {
			const authorData = post.authors[0];
			author.innerHTML = authorData.profile_image 
				? `<img src="${authorData.profile_image}" alt="${authorData.name}" style="width:24px;height:24px;min-width:24px;max-width:24px;min-height:24px;max-height:24px;border-radius:50%;object-fit:cover;border:1px solid rgba(255,255,255,0.1);" /><span>By ${authorData.name}</span>`
				: `<span>By ${authorData.name}</span>`;
		} else if (author) {
			author.innerHTML = '';
		}

		body.innerHTML = post.html || '';

		// Open modal
		modal.classList.add('open');
		document.body.style.overflow = 'hidden';
	}

	function closeModal() {
		const modal = document.getElementById('post-modal');
		if (modal) {
			modal.classList.remove('open');
			document.body.style.overflow = '';
		}
	}

	// Setup on page load - covers all scenarios
	document.addEventListener('astro:page-load', setupBlog);
	
	// Fallback for direct page load without View Transitions
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', setupBlog);
	} else {
		// DOM already loaded, run setup immediately
		setupBlog();
	}
</script>

