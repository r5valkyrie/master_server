---
import Dashboard from '../../layouts/Dashboard.astro';
---

<Dashboard>
  <!-- Content Management -->
  <div id="content-admin">
    <!-- Page Header -->
    <div class="page-header">
      <div>
        <h1 class="page-title">Content Management</h1>
        <p class="page-subtitle">Manage server messages and legal content</p>
      </div>
    </div>

    <!-- Content Cards -->
    <div class="content-grid">
      <!-- MOTD Card -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Message of the Day (MOTD)</h3>
          <p class="card-subtitle">Displayed to players</p>
        </div>
        <div class="card-content">
          <form id="motd-form">
            <div class="form-group">
              <label for="motd-text">MOTD Content</label>
              <textarea 
                id="motd-text" 
                name="motd" 
                rows="8" 
                placeholder="Enter the message of the day..."
                class="form-control"
              ></textarea>
              <div class="form-help">
                <!-- <span class="text-muted">Supports basic HTML formatting. Keep it concise and informative.</span> -->
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">
                <i class="icon-save"></i>
                Update MOTD
              </button>
              <button type="button" id="motd-preview" class="btn btn-secondary">
                <i class="icon-eye"></i>
                Preview
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- EULA Card -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">End User License Agreement (EULA)</h3>
          <p class="card-subtitle">Legal terms users must accept</p>
        </div>
        <div class="card-content">
          <form id="eula-form">
            <div class="form-group">
              <label for="eula-text">EULA Content</label>
              <textarea 
                id="eula-text" 
                name="eula" 
                rows="12" 
                placeholder="Enter the End User License Agreement..."
                class="form-control"
              ></textarea>
              <div class="form-help">
                <!-- <span class="text-muted">This is a legal document. Consult with legal counsel before making changes.</span> -->
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">
                <i class="icon-save"></i>
                Update EULA
              </button>
              <button type="button" id="eula-preview" class="btn btn-secondary">
                <i class="icon-eye"></i>
                Preview
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Preview Modal -->
    <div id="preview-modal" class="modal-overlay" style="display: none;">
      <div class="modal modal-lg">
        <div class="modal-header">
          <h3 id="preview-title" class="modal-title">Preview</h3>
          <button type="button" class="modal-close" onclick="closePreviewModal()">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="modal-content">
          <div id="preview-content" class="preview-content"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closePreviewModal()">Close</button>
        </div>
      </div>
    </div>
  </div>

  <style>
    .content-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      margin-top: 1.5rem;
    }

    @media (max-width: 1024px) {
      .content-grid {
        grid-template-columns: 1fr;
      }
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: var(--text-primary);
    }

    .form-control {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid var(--border-color);
      border-radius: 6px;
      background: var(--bg-secondary);
      color: var(--text-primary);
      font-family: inherit;
      font-size: 0.875rem;
      resize: vertical;
      min-height: 120px;
    }

    .form-control:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px var(--primary-color-alpha);
    }

    .form-help {
      margin-top: 0.5rem;
    }

    .form-actions {
      display: flex;
      gap: 0.75rem;
      justify-content: flex-start;
    }

    .preview-content {
      padding: 1rem;
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 6px;
      white-space: pre-wrap;
      max-height: 400px;
      overflow-y: auto;
    }

    .text-muted {
      color: var(--text-secondary);
      font-size: 0.8rem;
    }

    /* Preview content styling */
    .preview-content {
      padding: 1rem;
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 6px;
      white-space: pre-wrap;
      max-height: 400px;
      overflow-y: auto;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.5;
    }

    /* Icons */
    .icon-save::before { content: "[SAVE]"; }
    .icon-eye::before { content: "[VIEW]"; }
    .icon-x::before { content: "[X]"; }
  </style>

  <script>
    // @ts-nocheck
    let currentMOTD = '';
    let currentEULA = '';

    // Load current content
    async function loadContent() {
      try {
        // Load MOTD
        const motdResponse = await fetch('/api/admin/motd');
        if (motdResponse.ok) {
          const motdData = await motdResponse.json();
          currentMOTD = motdData.content || '';
          const motdInput = document.getElementById('motd-text') as HTMLTextAreaElement;
          if (motdInput) motdInput.value = currentMOTD;
        }

        // Load EULA
        const eulaResponse = await fetch('/api/admin/eula');
        if (eulaResponse.ok) {
          const eulaData = await eulaResponse.json();
          currentEULA = eulaData.eula?.contents || '';
          const eulaInput = document.getElementById('eula-text') as HTMLTextAreaElement;
          if (eulaInput) eulaInput.value = currentEULA;
        }
      } catch (error) {
        console.error('Error loading content:', error);
        (window as any).showNotification?.('Error loading content', 'error');
      }
    }

    // Save MOTD
    async function saveMOTD(content: string) {
      try {
        const response = await fetch('/api/admin/motd', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ content: content }),
        });

        if (response.ok) {
          const result = await response.json();
          if (result.success) {
            currentMOTD = content;
            (window as any).showNotification?.('MOTD updated successfully', 'success');
          } else {
            throw new Error(result.error || 'Failed to update MOTD');
          }
        } else {
          throw new Error('Failed to update MOTD');
        }
      } catch (error) {
        console.error('Error saving MOTD:', error);
        (window as any).showNotification?.('Error updating MOTD', 'error');
      }
    }

    // Save EULA
    async function saveEULA(content: string) {
      try {
        const response = await fetch('/api/admin/eula', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ contents: content, lang: 'english' }),
        });

        if (response.ok) {
          const result = await response.json();
          if (result.success) {
            currentEULA = content;
            (window as any).showNotification?.('EULA updated successfully', 'success');
          } else {
            throw new Error(result.error || 'Failed to update EULA');
          }
        } else {
          throw new Error('Failed to update EULA');
        }
      } catch (error) {
        console.error('Error saving EULA:', error);
        (window as any).showNotification?.('Error updating EULA', 'error');
      }
    }

    // Preview functions
    function showPreview(title: string, content: string) {
      const previewTitle = document.getElementById('preview-title');
      const previewContent = document.getElementById('preview-content');
      const previewModal = document.getElementById('preview-modal');
      
      if (previewTitle) previewTitle.textContent = title;
      if (previewContent) previewContent.innerHTML = content.replace(/\n/g, '<br>');
      if (previewModal) previewModal.style.display = 'flex';
      
      // Prevent body scroll when modal is open
      document.body.style.overflow = 'hidden';
    }

    function closePreviewModal() {
      const previewModal = document.getElementById('preview-modal');
      if (previewModal) previewModal.style.display = 'none';
      
      // Restore body scroll
      document.body.style.overflow = '';
    }

    // Make closePreviewModal global so onclick attribute can access it
    (window as any).closePreviewModal = closePreviewModal;

    // Event listeners
    document.addEventListener('DOMContentLoaded', function() {
      loadContent();

      // MOTD form
      const motdForm = document.getElementById('motd-form');
      if (motdForm) {
        motdForm.addEventListener('submit', async function(e) {
          e.preventDefault();
          const motdText = document.getElementById('motd-text') as HTMLTextAreaElement;
          if (motdText) {
            const content = motdText.value.trim();
            await saveMOTD(content);
          }
        });
      }

      // EULA form
      const eulaForm = document.getElementById('eula-form');
      if (eulaForm) {
        eulaForm.addEventListener('submit', async function(e) {
          e.preventDefault();
          const eulaText = document.getElementById('eula-text') as HTMLTextAreaElement;
          if (eulaText) {
            const content = eulaText.value.trim();
            await saveEULA(content);
          }
        });
      }

      // Preview buttons
      const motdPreview = document.getElementById('motd-preview');
      if (motdPreview) {
        motdPreview.addEventListener('click', function() {
          const motdText = document.getElementById('motd-text') as HTMLTextAreaElement;
          if (motdText) {
            const content = motdText.value.trim();
            showPreview('MOTD Preview', content || 'No content to preview');
          }
        });
      }

      const eulaPreview = document.getElementById('eula-preview');
      if (eulaPreview) {
        eulaPreview.addEventListener('click', function() {
          const eulaText = document.getElementById('eula-text') as HTMLTextAreaElement;
          if (eulaText) {
            const content = eulaText.value.trim();
            showPreview('EULA Preview', content || 'No content to preview');
          }
        });
      }

      // Close modal on background click
      const previewModal = document.getElementById('preview-modal');
      if (previewModal) {
        previewModal.addEventListener('click', function(e) {
          if (e.target === previewModal) {
            closePreviewModal();
          }
        });
      }

      // Escape key to close modal
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closePreviewModal();
        }
      });
    });
  </script>
</Dashboard>
