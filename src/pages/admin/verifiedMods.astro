---
import Dashboard from '../../layouts/Dashboard.astro';
---
<Dashboard>
  <!-- Verified Mods Management -->
  <div id="verified-mods-list" class="mods-page">
    <!-- Header with Actions -->
    <div class="page-header">
      <h1>Verified Mods</h1>
      <p>Manage and verify Thunderstore mods</p>
    </div>

    <!-- Search and Filter Toolbar -->
    <div class="mods-toolbar">
      <div class="search-container">
        <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input type="text" id="search-bar" class="search-input" placeholder="Search mods by name or author..." />
      </div>
      <div class="mods-actions">
        <button class="btn btn-outline" id="show-verified-only">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Verified Only
        </button>
        <button class="btn btn-primary" id="refresh-mods-btn">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Refresh Mods
        </button>
      </div>
    </div>

    <!-- Mods Grid Container -->
    <div id="mods-container" class="mods-grid">
      <!-- Loading State -->
      <div id="loading-state" class="mods-loading">
        <svg class="spinner" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2v4m0 12v4m9-9h-4M7 12H3m15.364 6.364l-2.828-2.828M6.464 6.464L3.636 3.636m12.728 0l-2.828 2.828M6.464 17.536L3.636 20.364"></path>
        </svg>
        <p>Loading mods from Thunderstore...</p>
      </div>
      
      <!-- Empty State -->
      <div id="empty-state" class="mods-empty hidden">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <p>No mods found</p>
        <p class="text-sm mt-2">Try adjusting your search or refresh the mod list</p>
      </div>

      <!-- Mods will be rendered here -->
      <div id="mods-browser-table-body" class="mods-items"></div>
    </div>

    <!-- Pagination -->
    <div id="pagination" class="pagination hidden">
      <div class="pagination-info">
        <span id="page-info">Showing 1-50 of 150 mods</span>
      </div>
      <div class="pagination-controls">
        <button class="btn btn-outline btn-sm" id="prev-page">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Previous
        </button>
        <span id="page-number" class="px-3 py-2 text-sm">Page 1</span>
        <button class="btn btn-outline btn-sm" id="next-page">
          Next
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Notification Container -->
  <div id="notificationContainer"></div>


  <script>
    let allMods: any[] = [];
    let verifiedMods: any[] = [];
    let filteredMods: any[] = [];
    let showVerifiedOnly = false;
    let currentPage = 1;
    const modsPerPage = 12;

    // Initialize page
    document.addEventListener('DOMContentLoaded', function() {
      loadAllData();
      setupEventListeners();
    });

    function setupEventListeners() {
      // Search functionality
      const searchBar = document.getElementById('search-bar') as HTMLInputElement;
      searchBar?.addEventListener('input', function() {
        filterAndRenderMods();
      });

      // Filter buttons
      document.getElementById('show-verified-only')?.addEventListener('click', toggleVerifiedFilter);
      document.getElementById('refresh-mods-btn')?.addEventListener('click', loadAllData);

      // Pagination
      document.getElementById('prev-page')?.addEventListener('click', () => changePage(-1));
      document.getElementById('next-page')?.addEventListener('click', () => changePage(1));

      // Event delegation for verify/unverify buttons
      document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        const button = target.closest('.mod-action-btn') as HTMLButtonElement;
        
        if (button) {
          e.preventDefault();
          const action = button.getAttribute('data-action');
          const name = button.getAttribute('data-name');
          const owner = button.getAttribute('data-owner');
          const url = button.getAttribute('data-url');
          
          if (action && name && owner) {
            if (action === 'verify' && url) {
              verifyMod(name, owner, url);
            } else if (action === 'unverify') {
              unverifyMod(name, owner);
            }
          }
        }
      });
    }

    async function loadAllData() {
      showLoading();
      try {
        const [thunderstoreResponse, verifiedResponse] = await Promise.all([
          fetch('/api/client/mods'),
          fetch('/api/admin/verifiedMods')
        ]);

        const thunderstoreData = await thunderstoreResponse.json();
        const verifiedData = await verifiedResponse.json();

        if (verifiedData.success) {
          verifiedMods = verifiedData.mods;
        } else {
          verifiedMods = [];
          console.warn('Failed to load verified mods:', verifiedData.error);
        }

        if (Array.isArray(thunderstoreData)) {
          allMods = thunderstoreData.map((mod: any) => ({
            ...mod,
            isVerified: verifiedMods.some(v => v.name === mod.name && v.owner === mod.owner)
          }));
          filterAndRenderMods();
        } else {
          showError('Failed to load mods from Thunderstore');
        }
      } catch (error) {
        console.error('Error loading data:', error);
        showError('Failed to load mod data');
      }
    }

    function filterAndRenderMods() {
      const searchQuery = (document.getElementById('search-bar') as HTMLInputElement)?.value.toLowerCase() || '';
      
      filteredMods = allMods.filter(mod => {
        const matchesSearch = !searchQuery || 
          mod.name.toLowerCase().includes(searchQuery) || 
          mod.owner.toLowerCase().includes(searchQuery) ||
          mod.full_name.toLowerCase().includes(searchQuery);
        
        const matchesFilter = !showVerifiedOnly || mod.isVerified;
        
        return matchesSearch && matchesFilter;
      });

      currentPage = 1;
      renderCurrentPage();
    }

    function renderCurrentPage() {
      hideLoading();
      const container = document.getElementById('mods-browser-table-body');
      const emptyState = document.getElementById('empty-state');
      const pagination = document.getElementById('pagination');
      
      if (filteredMods.length === 0) {
        if (container) container.innerHTML = '';
        emptyState?.classList.remove('hidden');
        pagination?.classList.add('hidden');
        return;
      }
      
      emptyState?.classList.add('hidden');
      
      const totalPages = Math.ceil(filteredMods.length / modsPerPage);
      const startIndex = (currentPage - 1) * modsPerPage;
      const endIndex = Math.min(startIndex + modsPerPage, filteredMods.length);
      const currentMods = filteredMods.slice(startIndex, endIndex);
      
      if (container) {
        container.innerHTML = currentMods.map((mod: any) => {
          const latestVersion = mod.versions?.[0];
          const downloads = latestVersion?.downloads || 0;
          const categories = mod.categories?.join(', ') || 'N/A';
          const ratingClass = mod.rating_score > 4 ? 'text-green-400' : mod.rating_score > 2 ? 'text-yellow-400' : 'text-red-400';
          
          return `
            <div class="mod-card ${mod.isVerified ? 'verified' : ''}">
              <div class="mod-card-header">
                <div class="mod-status">
                  ${mod.isVerified ? 
                    '<span class="status-badge verified"><svg fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>Verified</span>' :
                    '<span class="status-badge unverified">Unverified</span>'
                  }
                  ${mod.is_deprecated ? '<span class="status-badge deprecated">Deprecated</span>' : ''}
                </div>
              </div>
              <div class="mod-card-body">
                <h3 class="mod-name">${escapeHtml(mod.name)}</h3>
                <p class="mod-author">by ${escapeHtml(mod.owner)}</p>
                <p class="mod-description">${mod.description ? escapeHtml(mod.description.substring(0, 100)) + '...' : 'No description'}</p>
                
                <div class="mod-meta">
                  <div class="meta-item">
                    <span class="meta-label">Category</span>
                    <span class="meta-value">${escapeHtml(categories)}</span>
                  </div>
                  <div class="meta-item">
                    <span class="meta-label">Downloads</span>
                    <span class="meta-value">${downloads.toLocaleString()}</span>
                  </div>
                  <div class="meta-item">
                    <span class="meta-label">Rating</span>
                    <span class="meta-value ${ratingClass}">
                      ${mod.rating_score > 0 ? `â˜… ${mod.rating_score.toFixed(1)}` : 'No rating'}
                    </span>
                  </div>
                </div>
              </div>
              <div class="mod-card-footer">
                <a href="${escapeHtml(mod.package_url)}" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-2M7 7h10v10M17 7l-10 10"></path>
                  </svg>
                  View
                </a>
                ${mod.isVerified ? 
                  `<button class="btn btn-sm btn-danger mod-action-btn" data-action="unverify" data-name="${escapeHtml(mod.name)}" data-owner="${escapeHtml(mod.owner)}">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Remove
                  </button>` :
                  `<button class="btn btn-sm btn-success mod-action-btn" data-action="verify" data-name="${escapeHtml(mod.name)}" data-owner="${escapeHtml(mod.owner)}" data-url="${escapeHtml(mod.package_url)}">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Verify
                  </button>`
                }
              </div>
            </div>
          `;
        }).join('');
      }
      
      updatePagination(totalPages, startIndex + 1, endIndex, filteredMods.length);
    }

    function updatePagination(totalPages: number, start: number, end: number, total: number) {
      const pagination = document.getElementById('pagination');
      const pageInfo = document.getElementById('page-info');
      const pageNumber = document.getElementById('page-number');
      const prevBtn = document.getElementById('prev-page') as HTMLButtonElement;
      const nextBtn = document.getElementById('next-page') as HTMLButtonElement;
      
      if (totalPages <= 1) {
        pagination?.classList.add('hidden');
        return;
      }
      
      pagination?.classList.remove('hidden');
      
      if (pageInfo) pageInfo.textContent = `Showing ${start}-${end} of ${total} mods`;
      if (pageNumber) pageNumber.textContent = `Page ${currentPage} of ${totalPages}`;
      
      if (prevBtn) prevBtn.disabled = currentPage <= 1;
      if (nextBtn) nextBtn.disabled = currentPage >= totalPages;
    }

    function changePage(delta: number) {
      const totalPages = Math.ceil(filteredMods.length / modsPerPage);
      const newPage = currentPage + delta;
      
      if (newPage >= 1 && newPage <= totalPages) {
        currentPage = newPage;
        renderCurrentPage();
      }
    }

    function toggleVerifiedFilter() {
      showVerifiedOnly = !showVerifiedOnly;
      const btn = document.getElementById('show-verified-only');
      
      if (showVerifiedOnly) {
        btn?.classList.remove('btn-outline');
        btn?.classList.add('btn-primary');
      } else {
        btn?.classList.remove('btn-primary');
        btn?.classList.add('btn-outline');
      }
      
      filterAndRenderMods();
    }

    async function verifyMod(name: string, owner: string, thunderstore_link: string) {
      try {
        const response = await fetch('/api/admin/verifiedMods', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ type: 'add', name, owner, thunderstore_link })
        });

        const result = await response.json();
        
        if (result.success) {
          showSuccess(`${name} verified successfully`);
          
          const modIndex = allMods.findIndex(m => m.name === name && m.owner === owner);
          if (modIndex !== -1) {
            allMods[modIndex].isVerified = true;
          }
          
          const verifiedResponse = await fetch('/api/admin/verifiedMods');
          const verifiedData = await verifiedResponse.json();
          if (verifiedData.success) {
            verifiedMods = verifiedData.mods;
          }
          
          filterAndRenderMods();
        } else {
          showError('Failed to verify mod: ' + result.error);
        }
      } catch (error) {
        console.error('Error verifying mod:', error);
        showError('Failed to verify mod');
      }
    }

    async function unverifyMod(name: string, owner: string) {
      try {
        const verifiedMod = verifiedMods.find(m => m.name === name && m.owner === owner);
        if (!verifiedMod) {
          showError('Verified mod not found');
          return;
        }

        const response = await fetch('/api/admin/verifiedMods', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ type: 'remove', id: verifiedMod.id })
        });

        const result = await response.json();
        
        if (result.success) {
          showSuccess(`${name} removed from verified mods`);
          
          const modIndex = allMods.findIndex(m => m.name === name && m.owner === owner);
          if (modIndex !== -1) {
            allMods[modIndex].isVerified = false;
          }
          
          const verifiedResponse = await fetch('/api/admin/verifiedMods');
          const verifiedData = await verifiedResponse.json();
          if (verifiedData.success) {
            verifiedMods = verifiedData.mods;
          }
          
          filterAndRenderMods();
        } else {
          showError('Failed to remove verification: ' + result.error);
        }
      } catch (error) {
        console.error('Error removing verification:', error);
        showError('Failed to remove verification');
      }
    }

    function showLoading() {
      document.getElementById('loading-state')?.classList.remove('hidden');
      document.getElementById('empty-state')?.classList.add('hidden');
      document.getElementById('pagination')?.classList.add('hidden');
    }

    function hideLoading() {
      document.getElementById('loading-state')?.classList.add('hidden');
    }

    function showSuccess(message: string) {
      (window as any).showNotification?.('success', 'Success', message);
    }

    function showError(message: string) {
      (window as any).showNotification?.('error', 'Error', message);
    }

    function escapeHtml(text: string) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
  </script>
</Dashboard>
