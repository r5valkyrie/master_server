---
import DashboardLayout from '../../layouts/Dashboard.astro';
---

<DashboardLayout>
  <div class="content-container">
    <div class="page-header">
      <h1>API Key Management</h1>
      <p>Create and manage API keys for external integrations</p>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Active API Keys</h2>
      </div>
      <div class="card-content">
        <p class="text-gray-500 mb-4">Manage your API keys for server integrations</p>
        
        <button id="newKeyBtn" class="btn btn-primary">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
          Generate New Key
        </button>

        <div id="keysContainer" class="keys-table-container" style="margin-top: 1.5rem;">
          <div class="loading">Loading API keys...</div>
        </div>

        <div id="statusMessage" class="status-message" style="display: none;"></div>
      </div>
    </div>

    <div class="modal-overlay" id="newKeyModal" style="display: none;">
      <div class="modal">
        <div class="modal-header">
          <h3 class="modal-title">Generate New API Key</h3>
          <button class="modal-close" id="closeModal">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          </button>
        </div>
        
        <div class="modal-content">
          <form id="newKeyForm" class="modal-form">
            <div class="form-group">
              <label for="keyName" class="form-label">Key Name</label>
              <input
                type="text"
                id="keyName"
                name="keyName"
                class="form-input"
                placeholder="e.g., Discord Bot, Game Server Client"
                required
              />
              <div class="form-help">A descriptive name for this API key</div>
            </div>

            <div class="form-group">
              <label for="keyDescription" class="form-label">Description (Optional)</label>
              <textarea
                id="keyDescription"
                name="keyDescription"
                class="form-textarea"
                placeholder="What is this key used for?"
                rows="3"
              ></textarea>
              <div class="form-help">Additional notes about this key's purpose</div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" id="cancelBtn">Cancel</button>
              <button type="submit" class="btn btn-primary">Generate Key</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="modal-overlay" id="displayKeyModal" style="display: none;">
      <div class="modal">
        <div class="modal-header">
          <h3 class="modal-title">API Key Generated</h3>
          <button class="modal-close" id="closeDisplayModal">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          </button>
        </div>
        
        <div class="modal-content">
          <div class="alert alert-warning mb-4">
            <svg class="alert-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path></svg>
            <div class="alert-content">
              <strong>Save this key somewhere safe.</strong> You won't be able to view it again!
            </div>
          </div>
          
          <div class="key-display mb-4">
            <div class="flex gap-2">
              <input
                type="text"
                id="displayedKey"
                class="form-input font-mono"
                readonly
              />
              <button type="button" class="btn btn-primary" id="copyKeyBtn">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path></svg>
                Copy
              </button>
            </div>
          </div>

          <p class="text-gray-500 text-sm">
            This key has been added to your active keys list and can now be used for API requests.
          </p>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="closeDisplayKeyBtn">Done</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    interface ApiKey {
      id: number;
      key_name: string;
      key_prefix: string;
      description: string;
      active: number;
      last_used: string | null;
      created_at: string;
    }

    interface ApiResponse {
      success: boolean;
      keys?: ApiKey[];
      key?: string;
      error?: string;
    }

    const newKeyBtn = document.getElementById('newKeyBtn');
    const newKeyModal = document.getElementById('newKeyModal');
    const displayKeyModal = document.getElementById('displayKeyModal');
    const newKeyForm = document.getElementById('newKeyForm') as HTMLFormElement;
    const statusMessage = document.getElementById('statusMessage');

    function showMessage(message: string, isSuccess: boolean) {
      if (!statusMessage) return;
      statusMessage.textContent = message;
      statusMessage.className = `status-message ${isSuccess ? 'success' : 'error'}`;
      statusMessage.style.display = 'block';

      setTimeout(() => {
        if (statusMessage) statusMessage.style.display = 'none';
      }, 5000);
    }

    async function loadApiKeys() {
      try {
        const response = await fetch('/api/admin/apiKeys');
        const data = (await response.json()) as ApiResponse;

        if (!data.success || !data.keys) {
          showMessage('Failed to load API keys', false);
          return;
        }

        const container = document.getElementById('keysContainer');
        if (!container) return;

        if (data.keys.length === 0) {
          container.innerHTML = '<div class="empty-state"><p>No API keys yet. Create one to get started.</p></div>';
          return;
        }

        const table = document.createElement('table');
        table.className = 'keys-table';
        table.innerHTML = `
          <thead>
            <tr>
              <th>Key Name</th>
              <th>Prefix</th>
              <th>Status</th>
              <th>Last Used</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>
        `;

        const tbody = table.querySelector('tbody');
        if (!tbody) return;

        data.keys.forEach((key: ApiKey) => {
          const row = document.createElement('tr');
          const lastUsed = key.last_used ? new Date(key.last_used).toLocaleDateString() : 'Never';
          const created = new Date(key.created_at).toLocaleDateString();
          const statusClass = key.active ? 'status-active' : 'status-inactive';
          const statusText = key.active ? 'Active' : 'Inactive';

          row.innerHTML = `
            <td><strong>${key.key_name}</strong>${key.description ? `<div style="color: rgba(255, 255, 255, 0.6); font-size: 0.85rem;">${key.description}</div>` : ''}</td>
            <td><span class="key-prefix">${key.key_prefix}...</span></td>
            <td><span class="status-badge ${statusClass}">${statusText}</span></td>
            <td>${lastUsed}</td>
            <td>${created}</td>
            <td>
              <div class="key-actions">
                <button class="btn btn-sm btn-secondary toggle-btn" data-id="${key.id}" data-active="${key.active}">
                  ${key.active ? 'Disable' : 'Enable'}
                </button>
                <button class="btn btn-sm btn-danger delete-btn" data-id="${key.id}">Delete</button>
              </div>
            </td>
          `;
          tbody.appendChild(row);
        });

        container.innerHTML = '';
        container.appendChild(table);

        // Attach event listeners
        attachEventListeners();
      } catch (err) {
        console.error('Error loading API keys:', err);
        showMessage('Error loading API keys', false);
      }
    }

    function attachEventListeners() {
      document.querySelectorAll('.toggle-btn').forEach((btn) => {
        btn.addEventListener('click', async (e) => {
          e.preventDefault();
          const id = (btn as HTMLButtonElement).dataset.id;
          const currentActive = (btn as HTMLButtonElement).dataset.active === '1';

          try {
            const response = await fetch('/api/admin/apiKeys', {
              method: 'PATCH',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ id: parseInt(id as string), active: !currentActive })
            });

            const data = (await response.json()) as ApiResponse;

            if (data.success) {
              showMessage(`Key ${!currentActive ? 'enabled' : 'disabled'} successfully`, true);
              loadApiKeys();
            } else {
              showMessage(data.error || 'Failed to update key', false);
            }
          } catch (err) {
            console.error('Error updating key:', err);
            showMessage('Error updating key', false);
          }
        });
      });

      document.querySelectorAll('.delete-btn').forEach((btn) => {
        btn.addEventListener('click', async (e) => {
          e.preventDefault();
          const id = (btn as HTMLButtonElement).dataset.id;

          if (!confirm('Are you sure you want to delete this API key? This action cannot be undone.')) {
            return;
          }

          try {
            const response = await fetch('/api/admin/apiKeys', {
              method: 'DELETE',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ id: parseInt(id as string) })
            });

            const data = (await response.json()) as ApiResponse;

            if (data.success) {
              showMessage('Key deleted successfully', true);
              loadApiKeys();
            } else {
              showMessage(data.error || 'Failed to delete key', false);
            }
          } catch (err) {
            console.error('Error deleting key:', err);
            showMessage('Error deleting key', false);
          }
        });
      });
    }

    // Modal handlers
    newKeyBtn?.addEventListener('click', () => {
      if (newKeyModal) newKeyModal.style.display = 'flex';
    });

    document.getElementById('closeModal')?.addEventListener('click', () => {
      if (newKeyModal) newKeyModal.style.display = 'none';
      newKeyForm.reset();
    });

    document.getElementById('cancelBtn')?.addEventListener('click', () => {
      if (newKeyModal) newKeyModal.style.display = 'none';
      newKeyForm.reset();
    });

    document.getElementById('closeDisplayModal')?.addEventListener('click', () => {
      if (displayKeyModal) displayKeyModal.style.display = 'none';
    });

    document.getElementById('closeDisplayKeyBtn')?.addEventListener('click', () => {
      if (displayKeyModal) displayKeyModal.style.display = 'none';
      loadApiKeys();
    });

    document.getElementById('copyKeyBtn')?.addEventListener('click', () => {
      const keyInput = document.getElementById('displayedKey') as HTMLInputElement;
      if (keyInput) {
        keyInput.select();
        document.execCommand('copy');
        showMessage('API key copied to clipboard', true);
      }
    });

    // Close modals on background click
    [newKeyModal, displayKeyModal].forEach((modal) => {
      modal?.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.style.display = 'none';
          newKeyForm.reset();
        }
      });
    });

    // Form submission
    newKeyForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const keyName = (document.getElementById('keyName') as HTMLInputElement).value;
      const keyDescription = (document.getElementById('keyDescription') as HTMLTextAreaElement).value;

      if (!keyName.trim()) {
        showMessage('Key name is required', false);
        return;
      }

      try {
        const response = await fetch('/api/admin/apiKeys', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            keyName: keyName.trim(),
            description: keyDescription.trim()
          })
        });

        const data = (await response.json()) as ApiResponse;

        if (data.success && data.key) {
          // Hide create modal, show display modal
          if (newKeyModal) newKeyModal.style.display = 'none';
          const displayedKeyInput = document.getElementById('displayedKey') as HTMLInputElement;
          if (displayedKeyInput) displayedKeyInput.value = data.key;
          if (displayKeyModal) displayKeyModal.style.display = 'flex';
          newKeyForm.reset();
        } else {
          showMessage(data.error || 'Failed to create API key', false);
        }
      } catch (err) {
        console.error('Error creating key:', err);
        showMessage('Error creating API key', false);
      }
    });

    // Load keys on page load
    loadApiKeys();
  </script>
</DashboardLayout>
