---
import Main from "../layouts/Main.astro";
import { marked } from "marked";

const GITHUB_REPO = "r5valkyrie/docs";
const GITHUB_BRANCH = "main";

async function fetchFromGitHub(path: string) {
    const url = `https://raw.githubusercontent.com/${GITHUB_REPO}/${GITHUB_BRANCH}/${path}`;
    const response = await fetch(url);
    if (!response.ok) {
        throw new Error(`Failed to fetch ${path}`);
    }
    return response.text();
}

let sidebarConfig;
let content;
let htmlContent;
let error: any = null;

try {
    const sidebarConfigRaw = await fetchFromGitHub("docs/sidebar.json");
    sidebarConfig = JSON.parse(sidebarConfigRaw);

    const url = new URL(Astro.request.url);
    const pageSlug = url.searchParams.get("page") || sidebarConfig.startPage;

    // Validate pageSlug
    if (!/^[a-zA-Z0-9_-]+$/.test(pageSlug)) {
        throw new Error("Invalid page slug");
    }

    const contentRaw = await fetchFromGitHub(`docs/${pageSlug}.md`);
    htmlContent = marked(contentRaw);
} catch (e) {
    console.error(e);
    error = e;
}

const sidebar = sidebarConfig?.sidebar || [];
const currentPage =
    new URL(Astro.request.url).searchParams.get("page") ||
    sidebarConfig?.startPage;

// Pre-fetch all doc content server-side for search (in parallel)
let allDocsContent: { slug: string; title: string; section: string; content: string }[] = [];
try {
    const fetchJobs: { slug: string; title: string; section: string; promise: Promise<string> }[] = [];
    for (const section of sidebar) {
        for (const page of (section as any).pages) {
            fetchJobs.push({
                slug: page.slug,
                title: page.title,
                section: (section as any).title,
                promise: fetchFromGitHub(`docs/${page.slug}.md`),
            });
        }
    }
    const results = await Promise.allSettled(fetchJobs.map(j => j.promise));
    results.forEach((result, i) => {
        if (result.status === 'fulfilled') {
            allDocsContent.push({
                slug: fetchJobs[i].slug,
                title: fetchJobs[i].title,
                section: fetchJobs[i].section,
                content: result.value,
            });
        }
    });
} catch {
    // If sidebar iteration fails, search just won't have content
}
