<script is:inline define:vars={{ allDocsContent }}>
    window.__allDocsContent = allDocsContent;
</script>

<script>
    function escapeHtml(str: string): string {
        return str.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
    }

    function getAllSnippets(content: string, query: string, contextChars = 100, maxSnippets = 3): string[] {
        const lower = content.toLowerCase();
        const qLower = query.toLowerCase();
        const snippets: string[] = [];
        let searchFrom = 0;

        while (snippets.length < maxSnippets) {
            const idx = lower.indexOf(qLower, searchFrom);
            if (idx === -1) break;

            const start = Math.max(0, idx - contextChars);
            const end = Math.min(content.length, idx + query.length + contextChars);
            let snippet = content.slice(start, end).replace(/[\r\n]+/g, ' ').replace(/#{1,6}\s*/g, '').trim();

            if (start > 0) snippet = '\u2026' + snippet;
            if (end < content.length) snippet += '\u2026';

            const escaped = escapeHtml(snippet);
            const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            snippets.push(escaped.replace(regex, '<mark>$1</mark>'));

            searchFrom = idx + query.length + contextChars;
        }

        return snippets;
    }

    interface SearchResult {
        slug: string;
        title: string;
        section: string;
        snippets: string[];
        score: number;
    }

    function search(query: string): SearchResult[] {
        const docs = (window as any).__allDocsContent || [];
        if (!query || query.length < 2 || docs.length === 0) return [];
        const qLower = query.toLowerCase();
        const results: SearchResult[] = [];

        for (const doc of docs) {
            let score = 0;
            let snippets: string[] = [];

            if (doc.title.toLowerCase().includes(qLower)) {
                score += 10;
            }

            const headingRegex = /^#{1,6}\s+(.+)$/gm;
            let match;
            while ((match = headingRegex.exec(doc.content)) !== null) {
                if (match[1].toLowerCase().includes(qLower)) {
                    score += 5;
                    break;
                }
            }

            const contentSnippets = getAllSnippets(doc.content, query);
            if (contentSnippets.length > 0) {
                score += contentSnippets.length;
                snippets = contentSnippets;
            }

            if (score > 0) {
                if (snippets.length === 0) {
                    const firstLine = doc.content.split('\n').find((l: string) => l.trim() && !l.startsWith('#'));
                    if (firstLine) snippets = [escapeHtml(firstLine.trim().slice(0, 150))];
                }
                results.push({ slug: doc.slug, title: doc.title, section: doc.section, snippets, score });
            }
        }

        return results.sort((a, b) => b.score - a.score).slice(0, 20);
    }

    function showSearchResults(results: SearchResult[], query: string) {
        const searchContainer = document.getElementById('search-results-container')!;
        const docsContent = document.getElementById('docs-content')!;

        docsContent.style.display = 'none';
        searchContainer.style.display = 'block';

        if (results.length === 0) {
            searchContainer.innerHTML = `
                <div class="search-no-results">
                    <h3>No results for "${escapeHtml(query)}"</h3>
                    <p>Try different keywords or check your spelling.</p>
                </div>
            `;
            return;
        }

        const header = `
            <div class="search-results-header">
                <h2>Search Results</h2>
                <span class="search-results-count">${results.length} result${results.length !== 1 ? 's' : ''} for "${escapeHtml(query)}"</span>
            </div>
        `;

        const cards = results.map(r => `
            <a href="/docs?page=${encodeURIComponent(r.slug)}" class="search-result-card">
                <div class="result-page-section">${escapeHtml(r.section)}</div>
                <div class="result-page-title">${escapeHtml(r.title)}</div>
                ${r.snippets.length > 0 ? `
                    <div class="result-snippets">
                        ${r.snippets.map(s => `<div class="result-snippet">${s}</div>`).join('')}
                    </div>
                ` : ''}
            </a>
        `).join('');

        searchContainer.innerHTML = header + cards;
    }

    function hideSearch() {
        const searchContainer = document.getElementById('search-results-container')!;
        const docsContent = document.getElementById('docs-content')!;

        searchContainer.style.display = 'none';
        searchContainer.innerHTML = '';
        docsContent.style.display = 'block';
    }

    function initSearch() {
        const input = document.getElementById('docs-search-input') as HTMLInputElement;
        const shortcutHint = document.getElementById('search-shortcut-hint')!;
        if (!input || !shortcutHint) return;

        let debounceTimer: ReturnType<typeof setTimeout>;

        input.addEventListener('focus', () => {
            shortcutHint.style.display = 'none';
        });

        input.addEventListener('blur', () => {
            if (!input.value) shortcutHint.style.display = '';
        });

        input.addEventListener('input', () => {
            const query = input.value.trim();
            clearTimeout(debounceTimer);

            if (query.length < 2) {
                hideSearch();
                return;
            }

            debounceTimer = setTimeout(() => {
                const results = search(query);
                showSearchResults(results, query);
            }, 150);
        });
    }

    function initKeyboardShortcuts() {
        document.addEventListener('keydown', (e) => {
            const input = document.getElementById('docs-search-input') as HTMLInputElement;
            if (!input) return;

            if (e.key === '/' && document.activeElement !== input && !['INPUT', 'TEXTAREA'].includes((document.activeElement as HTMLElement)?.tagName)) {
                e.preventDefault();
                input.focus();
            }
            if (e.key === 'Escape' && document.activeElement === input) {
                if (input.value) {
                    input.value = '';
                    hideSearch();
                    const shortcutHint = document.getElementById('search-shortcut-hint');
                    if (shortcutHint) shortcutHint.style.display = '';
                }
                input.blur();
            }
        });
    }

    // Run on initial load and after every client-side navigation
    initSearch();
    initKeyboardShortcuts();
    document.addEventListener('astro:page-load', () => {
        initSearch();
    });
</script>
