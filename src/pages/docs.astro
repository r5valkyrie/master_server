<Main title="Documentation" fullWidth={true}>
    <div class="docs-wrapper fade-in">
        <aside class="docs-sidebar">
            <div class="sidebar-header">
                <h3>Documentation</h3>
                <div class="docs-search">
                    <div class="search-input-wrapper">
                        <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
                        <input type="text" id="docs-search-input" placeholder="Search all docs..." autocomplete="off" />
                        <kbd class="search-shortcut" id="search-shortcut-hint">/</kbd>
                    </div>
                </div>
            </div>
            <div class="sidebar-content custom-scrollbar">
                {
                    sidebar.length > 0 ? (
                        <nav>
                            {sidebar.map((section: any) => (
                                <div class="sidebar-section">
                                    <h4>{section.title}</h4>
                                    <ul>
                                        {section.pages.map((page: any) => (
                                            <li>
                                                <a
                                                    href={`/docs?page=${encodeURIComponent(page.slug)}`}
                                                    class={
                                                        page.slug ===
                                                        currentPage
                                                            ? "active"
                                                            : ""
                                                    }
                                                    data-astro-prefetch
                                                >
                                                    {page.title}
                                                </a>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ))}
                        </nav>
                    ) : (
                        <p class="error-text">Failed to load sidebar.</p>
                    )
                }
            </div>
        </aside>

        <div class="docs-main">
            <div class="docs-container">
                <div id="search-results-container" class="search-results-container" style="display:none;"></div>
                <div id="docs-content">
                    {
                        error ? (
                            <div class="alert-box error">
                                <h2>Error Loading Documentation</h2>
                                <p>
                                    Could not fetch documentation content. Please
                                    check your connection or try again later.
                                </p>
                                <p class="error-details">{error.message}</p>
                            </div>
                        ) : (
                            <article class="markdown-body" set:html={htmlContent} />
                        )
                    }
                </div>
            </div>
        </div>
    </div>
</Main>

